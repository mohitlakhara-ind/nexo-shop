{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "https://luminary-mern-api.onrender.com/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/build/$1"
        }
    ],
    "env": {
        "REACT_APP_API_URL": "https://luminary-mern-api.onrender.com"
    }
}